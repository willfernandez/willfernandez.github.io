@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700)
@import url(http://fonts.googleapis.com/css?family=PT+Serif+Caption)

verde = #749801
azul = #01587d
html
  background verde
  font-family: 'Lato'
  font-weight: 300
  font-size: 24px
  line-height: 125%
  color: #5e5e5e

body
  margin 0
  background verde
    

header
  background linear-gradient(to bottom, rgba(255,255,255,0.9) 0%,rgba(255,255,255,0.9) 1%,rgba(239,239,239,0.9) 95%,rgba(238,238,238,0.9) 100%)
  border-top 3px solid verde
  box-shadow: 0 5px 1px rgba(0, 0, 0, 0.2);
  color white
  position fixed
  top 0
  width 100%
  z-index 999
  .container
    padding 0 20px
    .btnPortafolio
      float right
  h2
    font-size 1.2em
    font-weight 400
    color verde
  .logo
    width 41px
    float left
    margin -7px 7px 0 0
    -webkit-transition:transform 0.2s ease
    -moz-transition:transform 0.2s ease 
    transition:transform 0.2s ease
    &:hover
      -webkit-transform rotateY( 180deg )
      -moz-transform rotateY( 180deg )
      transform:rotateY( 180deg )

.btnPortafolio
  background rgba(116,152,1,0.55)
  border 1px solid verde
  border-radius 2px
  color #fff
  font-size 0.75em
  font-weight 300
  margin -15px 10px
  padding 12px 32px
  text-align center
  text-decoration none
  text-transform uppercase
  transition background 0.2s  ease
  -webkit-transition background 0.2s  ease
  -moz-transition background 0.2s  ease
  -webkit-box-shadow 0px 8px 5px 0px rgba(50, 50, 56, 0.55)
  -moz-box-shadow    0px 8px 5px 0px rgba(50, 50, 56, 0.55)
  box-shadow         0px 8px 5px 0px rgba(50, 50, 56, 0.55)
  &:hover
    background rgba(116,152,1,0.9)
    box-shadow 0 3px 5px rgba(0,0,0,0.3)

article
  max-width 1400px
  position relative
  width 100%
  z-index 2
h1 h2 h3 h4
  font-weight 400
  line-height 125%
  
h3
  color #fff
  font-size 2em
  font-weight 700
  letter-spacing .2em
  text-transform uppercase
p
  line-height 140%

a
  background: transparent
  text-decoration none
  color verde
  transition background .1s ease
  -webkit-transition background .1s ease
  -moz-transition background .1s ease
  &:hover
    background rgba(125,164,0,0.2);

blockquote
  font-family: 'PT Serif Caption', serif;
  font-size 1.35em
  font-weight 400
  line-height 165%
  
::selection
  background rgba(125,164,0,0.2);

::-moz-selection
  background rgba(125,164,0,0.2);

  
.presentacion
  position fixed
  text-align center
  top 80px
  width 100%
  background #01587d url('../img/presentacion.jpg') no-repeat center center
  -moz-background-size cover
  -o-background-size cover
  -webkit-background-size cover
  article
    margin 0 auto
    max-width 100%
    position static
    width auto
  h1
    color #fff
    font-size 3.3em
    font-weight 400
  p
    color verde
    font-size 1.75em
    font-weight 300
    line-height 125%
    margin 0 40px 20px 40px
    margin 0 90px 0 90px
    padding 8px 10px 12px 8px
  .box-presentacion
    width 100%
    position absolute
    top 40%
.circulo
  
  border 1px solid rgba(255,255,255,0.3)
  border-radius 999999px
  bottom 40px
  display block
  height 60px
  left 50%
  margin-left -30px
  position absolute
  transition background 0.2s ease
  width 60px
  z-index 2
  -moz-transition background 0.2s ease
  -webkit-transition background 0.2s ease
  -o-transition background 0.2s ease
  &:hover
    background rgba(255,255,255,0.1)
    border-color rgba(255,255,255,0.5)
.flecha
  
  animation arrowbounce 1.5s ease infinite
  border-left 10px solid transparent
  border-right 10px solid transparent
  border-top 14px solid rgba(255,255,255, 0.25)
  height 0
  left 20px
  position absolute
  top 22px
  transition top 0.2s ease
  -moz-animation arrowbounce 1.5s ease infinite
  -moz-transition top 0.2s ease
  -webkit-animation arrowbounce 1.5s ease infinite
  -webkit-transition top 0.2s ease
  -o-animation arrowbounce 1.5s ease infinite
  -o-transition top 0.2s ease
  
  width 0
@-webkit-keyframes arrowbounce
  0%
    top:26px
    border-top-color:rgba(255,255,255,0.25)
  
  50%
    top:22px
    border-top-color:rgba(255,255,255,0.18)
  
  100%
    top:26px
    border-top-color:rgba(255,255,255, 0.25)
  
@-moz-keyframes arrowbounce
  0%
    top:26px
    border-top-color:rgba(255,255,255,0.25)

  50%
    top:22px
    border-top-color:rgba(255,255,255,0.18)

  100%
    top:26px
    border-top-color:rgba(255,255,255, 0.25)
    
@-o-keyframes arrowbounce
  0%
    top:26px
    border-top-color:rgba(255,255,255,0.25)

  50%
    top:22px
    border-top-color:rgba(255,255,255,0.18)

  100%
    top:26px
    border-top-color:rgba(255,255,255, 0.25)
  

    
@keyframes arrowbounce
  0%
    top:26px;
    border-top-color:rgba(255,255,255,0.25)
  
  50%
  top:22px;
  border-top-color:rgba(255,255,255,0.18)
  
  100%
  top:26px;
  border-top-color:rgba(255,255,255,0.25)
  

  
.about
  background white
  float left
  position relative
  .profile
    border-radius 50%
    display block
    height 224px
    margin 8% auto 2% auto
    position relative
    width 259px
  blockquote
    margin 0
    padding 0 25% 8% 25%
    position relative
    text-align center
  p
    opacity 0

.more:before
