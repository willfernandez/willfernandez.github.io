  padding-top 150px
  position relative
  width 100%
  z-index 2
  padding 100px 0 100px 0
  .bloque-trabajo
    padding 0
    margin 60px 8% 0 8%
  h3
    text-align center
    opacity 0
  .pProyecto 
    color #002a3d
    font-family 'PT Serif Caption'
    font-size 1.5em
    font-weight 400
    opacity 0
.pProyecto:after
    content ""
    background verde
    position relative
    width 200px
